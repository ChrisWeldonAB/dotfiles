// TODO commit tmux.conf.local and install the rest from gpakosz/.tmux.git
// This includes tpm

stow -v --stow xdg_config_home/ --target $XDG_CONFIG_HOME 
stow -v --stow home/ --target $HOME 


zshenv_addition="
### AUTOMATIC ADDITION BY ChrisWeldonAB/dotfiles
export ZDOTDIR=\$XDG_CONFIG_HOME/zsh # ChrisWeldonAB/dotfiles
export PATH=\$PATH:$(pwd)/bin # ChrisWeldonAB/dotfiles
### ChrisWeldonAB/dotfiles
"

echo "$zshenv_addition" >> $HOME/.zshenv

echo "DOTFILES INSTALLED into $XDG_CONFIG_HOME!"
